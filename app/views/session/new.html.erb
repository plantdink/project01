<!-- This partial will display the new login option when called by a user -->
<div class="row">
  <div class="col-lg-12">
    <h1>Sign In</h1>
  </div>
</div>

<!-- This  will display an error message to the user if login is not correct -->
<div class="row">
  <div class="col-lg-12">
    <% if flash[:error].present? %>
      <p class="error">
        <%= flash[:error] %>
      </p>
    <% end %>
  </div>
</div>

<%= form_tag login_path do %>
  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, :class => 'form-control', :autofocus => true %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= submit_tag "Sign In", :class => 'btn-lg btn-outline-success' %>
    </div>
  </div>
<% end %>
