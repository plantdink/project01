<!-- This partial is to create a new post -->
<div class="row">
  <div class="col">

    <%= form_for @post do |p| %>

<!-- This is the snippet title field-->
      <div class="form-group">
        <%= p.label :title %>
        <%= p.text_field :title, :class => 'form-control', :autofocus => true, :required => true %>
      </div>

<!-- This is the actual snippet field-->
      <div class="form-group">
        <%= p.label :example, 'Code Example' %>
        <%= p.text_area :example, :class => 'form-control', :required => true, :placeholder => 'Enter your code snippet here'%>
      </div>

<!-- This is the snippet explanation field -->
      <div class="form-group">
        <%= p.label :content, 'Explanation / Study notes' %>
        <%= p.text_area :content, :class => 'form-control' %>
      </div>

<!-- This is the submit button -->
      <%= p.submit :class => 'btn-lg btn-outline-success' %>
    <% end %>

  </div>
</div>
